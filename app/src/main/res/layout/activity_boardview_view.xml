<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fdffee"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#0ac5a8">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Calltoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0ac5a8"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/abc_vector_test">

            <TextView
                android:id="@+id/toolBarCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="게시판"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mywrite"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⦁ 내가 쓴 글"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mycommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="⦁ 내가 댓글 단 글"
                android:textSize="20dp" />
        </LinearLayout>

    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="⦁ 핫게시판"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/bookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="⦁ 즐겨찾기한 게시물"
                android:textSize="20dp" />

        </LinearLayout>

    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/freedom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="⦁ 자유게시판"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/friendbord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="⦁ 친목게시판"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/thiking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="⦁ 고민상담 게시판"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="⦁ 스터디 게시판"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/international"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="⦁ 대외활동 게시판"
                    android:textSize="20dp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="#0ac5a8">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginTop="13dp"
                android:background="#00ff0000"
                android:drawableTop="@drawable/ic_home_bg_35dp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginTop="13dp"
                android:background="#00ff0000"
                android:drawableTop="@drawable/ic_format_list_bulleted_bg_35dp"
                ></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:layout_marginTop="13dp"
                android:drawableTop="@drawable/ic_thumb_up_bg_35dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginTop="13dp"
                android:background="#00ff0000"
                android:drawableTop="@drawable/ic_people_bg_35dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginTop="13dp"
                android:background="#00ff0000"
                android:drawableTop="@drawable/ic_chat_bubble_bg_35dp"></Button>

        </LinearLayout>
        </LinearLayout>

