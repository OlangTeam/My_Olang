<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fdffee"
    tools:context=".IdPw_Find">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="#0ac5a8">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Calltoolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:navigationIcon="@drawable/abc_vector_test"
                android:background="#0ac5a8"
                android:theme="?attr/actionBarTheme">
                <TextView
                    android:id="@+id/toolBarCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ID/ 비밀번호 찾기"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/idfound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID찾기"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_id_name"
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="이름 : " />

            <EditText
                android:id="@+id/et_id_name"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/tv_id_hp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HP :" />

            <EditText
                android:id="@+id/et_id_hp"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone" />

            <Button
                android:id="@+id/bt_id_send_hp_check"
                android:layout_width="3dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_2"
                android:text="인증번호 받기" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_id_send_hp_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="인증번호:" />

            <EditText
                android:id="@+id/et_id_send_hp_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_id_send_hp_check"
                android:layout_width="2dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_2"
                android:text="확인" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_idfound"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_button_2"
            android:text="찾기"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_passfound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호찾기"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_pass_name"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:text="이름" />

            <EditText
                android:id="@+id/et_pass_name"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:ems="11"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID :" />

            <EditText
                android:id="@+id/et_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_pass_hp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HP" />

            <EditText
                android:id="@+id/et_pass_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button16"
                android:layout_width="46dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_2"
                android:text="인증번호받기" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pass_send_hp_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="인증번호 :" />

            <EditText
                android:id="@+id/et_pass_send_hp_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone" />

            <Button
                android:id="@+id/btn_pass_send_hp_check"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_2"
                android:text="확인" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_passfound"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:background="@drawable/round_button_2"
            android:text="찾기"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_join"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_2"
                android:text="회원가입" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_2"
                android:text="로그인" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>