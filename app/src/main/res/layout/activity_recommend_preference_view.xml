<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecommendPreferenceView"
    android:background="#fdffee"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#0ac5a8">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/recommendbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0ac5a8"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/abc_vector_test">

            <TextView
                android:id="@+id/barrecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="추천 취향 설정"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>

    <TextView
        android:id="@+id/iam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="나는 이런 사람이에요"
        android:background="@drawable/square" />

    <TextView
        android:id="@+id/character1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text=" 성격"
        android:layout_marginLeft="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/sexy"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="섹시한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/cute"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="귀여운"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/weird"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="사차원"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/different"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="엉뚱한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/pure"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="청순한"
            android:layout_margin="3dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/doggy"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="댕댕이"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/funny"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="유쾌한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/lively"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="활발한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/quietly"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="얌전한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/smart"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="지적인"
            android:layout_margin="3dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/fresh"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="상큼한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/sense"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="12dp"
            android:text="센스있는"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/abuse"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="욕쟁이"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/careful"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="세심한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/chic"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="시크한"
            android:layout_margin="3dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/hobby1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text=" 취미"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:id="@+id/ilike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text=" 나는 이런 사람이 좋아요"
        android:layout_marginTop="20dp"
        android:background="@drawable/square"/>

    <TextView
        android:id="@+id/character2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text=" 성격"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <Button
            android:id="@+id/sexy2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="섹시한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/cute2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="귀여운"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/weird2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="사차원"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/different2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="엉뚱한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/pure2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="청순한"
            android:layout_margin="3dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/doggy2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="댕댕이"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/funny2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="유쾌한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/lively2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="활발한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/quietly2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="얌전한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/smart2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="지적인"
            android:layout_margin="3dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <Button
            android:id="@+id/fresh2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="상큼한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/sense2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="12dp"
            android:text="센스있는"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/abuse2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="욕쟁이"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/careful2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="세심한"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/chic2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="시크한"
            android:layout_margin="3dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/hobby2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text=" 취미"
        android:layout_marginLeft="10dp" />
    
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/round_button"
            android:textSize="16dp"
            android:text="수정 완료"
            android:textColor="#FFFFFF"> </Button>

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="@drawable/round_button"
            android:text="취소"
            android:textSize="16dp"
            android:textColor="#FFFFFF"></Button>

    </LinearLayout>
</LinearLayout>