<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdffee">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mywrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*내가 쓴 글"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/mycommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="* 내가 댓글 단 글"
                android:textSize="18dp" />

            <View
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="2px"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="* 핫게시판"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/bookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="* 즐겨찾기한 게시물"
                android:textSize="18dp" />

            <View
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/freedom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="* 자유게시판"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/friendbord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="* 친목게시판"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/thiking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="* 고민상담 게시판"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="* 스터디 게시판"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/international"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="* 대외활동 게시판"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>